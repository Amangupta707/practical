pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/Amangupta707/practical.git'
            }
        }

        stage('Trivy Scan') {
            steps {
                sh '''
                # The --exit-code 1 flag will make the build fail if any vulnerabilities are found.
                # The --severity CRITICAL,HIGH flag only reports vulnerabilities of those severities.
                # You can adjust these flags based on your policy.
                trivy fs --exit-code 1 --severity CRITICAL,HIGH .
                '''
            }
        }

        stage('Install') {
            steps {
                sh '''
                python3 -m venv venv           # create virtual environment
                . venv/bin/activate            # activate it
                pip install --upgrade pip      # upgrade pip
                pip install -r requirements.txt
                '''
            }
        }

        stage('Test') {
            steps {
                sh '''
                . venv/bin/activate
                pytest --maxfail=1 --disable-warnings -q
                '''
            }
        }
    }
}
